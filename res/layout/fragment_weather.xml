<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/weather_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="96dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/city_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="36dp"
            android:layout_below="@+id/weather_icon_text"
            android:layout_alignRight="@+id/weather_icon_text"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/city_name_text"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:id="@+id/weather_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="72dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_above="@+id/weather_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asset_text"
            android:layout_alignLeft="@+id/weather_temperature_text"
            android:text="@string/temperature"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="24dp"/>
</RelativeLayout>